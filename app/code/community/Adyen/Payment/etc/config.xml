                <openinvoicetypes>
                    <afterpay>
                        <code>afterpay_default</code>
                        <name>AfterPay Netherlands</name>
                        <order>10</order>
                    </afterpay>
                    <klarna>
                        <code>klarna</code>
                        <name>Klarna</name>
                        <order>20</order>
                    </klarna>
                    <ratepay>
                        <code>ratepay</code>
                        <name>RatePAY</name>
                        <order>30</order>
                    </ratepay>
                </openinvoicetypes>
                <recurringtypes>
                    <none>
                        <code></code>
                        <name>NONE</name>
                        <order>10</order>
                    </none>
                    <oneclick>
                        <code>ONECLICK</code>
                        <name>ONECLICK</name>
                        <order>20</order>
                    </oneclick>
                    <recurring>
                        <code>RECURRING</code>
                        <name>RECURRING</name>
                        <order>30</order>
                    </recurring>
                    <oneclickrecurring>
                        <code>ONECLICK,RECURRING</code>
                        <name>ONECLICK,RECURRING</name>
                        <order>40</order>
                    </oneclickrecurring>
                </recurringtypes>
            </payment>
        </adyen>
    </default>
    <crontab>
        <jobs>
            <adyen_payment_process_notification_queue>
                <schedule>
                    <cron_expr>*/1 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>adyen/cronjob::updateNotificationQueue</model>
                </run>
            </adyen_payment_process_notification_queue>
            <adyen_payment_process_cancel_expired_paybylink>
                <schedule>
                    <cron_expr>*/60 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>adyen/cronjob::cancelExpiredPaybylink</model>
                </run>
            </adyen_payment_process_cancel_expired_paybylink>
        </jobs>
    </crontab>
</config>
